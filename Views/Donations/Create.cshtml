@model GiftOfGivers_WebApplication.Models.Donation

@{
    ViewData["Title"] = "Create Donation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Donation</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="DonorID" class="control-label"></label>
        <select asp-for="DonorID" class="form-control"
                asp-items="@(ViewData["DonorID"] as SelectList)">
            <option value="">-- Select Donor --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ReliefProjectID" class="control-label"></label>
        <select asp-for="ReliefProjectID" class="form-control"
                asp-items="@(ViewData["ReliefProjectID"] as SelectList)">
            <option value="">-- Select Relief Project --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model GiftOfGivers_WebApplication.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Donation</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DonationID" />

    <div class="mb-2">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-2">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    
</form>

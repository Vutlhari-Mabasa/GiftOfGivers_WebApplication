@model IEnumerable<GiftOfGivers_WebApplication.Models.Donation>

@{
    ViewData["Title"] = "Donations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Donations</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>DonationID</th>
            <th>DonorID</th>
            <th>ReliefProjectID</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DonationID</td>
                <td>@item.DonorID</td>
                <td>@item.ReliefProjectID</td>
                <td>@item.Amount</td>
                <td>@item.Type</td>
                <td>@item.Date</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DonationID" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.DonationID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.DonationID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

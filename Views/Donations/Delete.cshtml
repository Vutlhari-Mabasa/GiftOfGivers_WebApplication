@model GiftOfGivers_WebApplication.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Donation</h1>

<h3>Are you sure you want to delete this?</h3>

<dl class="row">
    <dt class="col-sm-2">DonationID</dt>
    <dd class="col-sm-10">@Model.DonationID</dd>

    <dt class="col-sm-2">DonorID</dt>
    <dd class="col-sm-10">@Model.DonorID</dd>

    <dt class="col-sm-2">ReliefProjectID</dt>
    <dd class="col-sm-10">@Model.ReliefProjectID</dd>

    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount</dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date</dd>
    
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DonationID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

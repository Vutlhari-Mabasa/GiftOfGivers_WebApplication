@model GiftOfGivers_WebApplication.Models.ResourceTracking

@{
    ViewData["Title"] = "Delete Resource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Resource</h1>

<h4>Are you sure you want to delete this resource?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">ResourceID</dt>
        <dd class="col-sm-10">@Model.ResourceID</dd>

        <dt class="col-sm-2">ReliefProjectID</dt>
        <dd class="col-sm-10">@Model.ReliefProjectID</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">@Model.Unit</dd>
    </dl>
    
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ResourceID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model IEnumerable<GiftOfGivers_WebApplication.Models.ResourceTracking>

@{
    ViewData["Title"] = "Resource Tracking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Resource Tracking</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Resource</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ResourceID</th>
            <th>ReliefProjectID</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ResourceID</td>
                <td>@item.ReliefProjectID</td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Unit</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ResourceID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ResourceID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ResourceID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model GiftOfGivers_WebApplication.Models.ResourceTracking

@{
    ViewData["Title"] = "Edit Resource Donation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Resource Donation</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="ResourceID" />

                        <div class="mb-3">
                            <label asp-for="ReliefProjectID" class="form-label fw-bold"></label>
                            <select asp-for="ReliefProjectID" class="form-select"
                                    asp-items="@(ViewData["ReliefProjectID"] as SelectList)">
                                <option value="">-- Select Relief Project --</option>
                            </select>
                            <span asp-validation-for="ReliefProjectID" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Category" class="form-label fw-bold"></label>
                                <select asp-for="Category" class="form-select">
                                    <option>Medical</option>
                                    <option>Food</option>
                                    <option>Clothing</option>
                                    <option>Shelter</option>
                                    <option>Water</option>
                                    <option>Tools</option>
                                    <option>General</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label fw-bold"></label>
                                <input asp-for="Quantity" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Unit" class="form-label fw-bold"></label>
                                <input asp-for="Unit" class="form-control" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Priority" class="form-label fw-bold"></label>
                                <select asp-for="Priority" class="form-select">
                                    <option>Low</option>
                                    <option>Medium</option>
                                    <option>High</option>
                                    <option>Critical</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DonatedBy" class="form-label fw-bold"></label>
                                <input asp-for="DonatedBy" class="form-control" />
                                <span asp-validation-for="DonatedBy" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DonationDate" class="form-label fw-bold"></label>
                                <input asp-for="DonationDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DonationDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label fw-bold"></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ExpiryDate" class="form-label fw-bold"></label>
                                <input asp-for="ExpiryDate" class="form-control" type="date" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-bold"></label>
                                <select asp-for="Status" class="form-select">
                                    <option>Available</option>
                                    <option>Distributed</option>
                                    <option>Expired</option>
                                    <option>Returned</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Notes" class="form-label fw-bold"></label>
                                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Update Resource
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

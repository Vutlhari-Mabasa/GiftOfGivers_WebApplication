@model GiftOfGivers_WebApplication.Models.ResourceTracking

@{
    ViewData["Title"] = "Create Resource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Resource</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="ReliefProjectID" class="control-label"></label>
        <select asp-for="ReliefProjectID" class="form-control"
                asp-items="@(ViewData["ReliefProjectID"] as SelectList)">
            <option value="">-- Select Relief Project --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Unit" class="form-label"></label>
        <input asp-for="Unit" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

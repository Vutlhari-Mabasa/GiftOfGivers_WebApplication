@model GiftOfGivers_WebApplication.Models.ResourceTracking

@{
    ViewData["Title"] = "Donate Resources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-heart-fill"></i> Donate Resources</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Medical Supplies, Food, Clothing" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Category" class="form-label fw-bold"></label>
                                <select asp-for="Category" class="form-select">
                                    <option>Medical</option>
                                    <option>Food</option>
                                    <option>Clothing</option>
                                    <option>Shelter</option>
                                    <option>Water</option>
                                    <option>Tools</option>
                                    <option>General</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label fw-bold"></label>
                                <input asp-for="Quantity" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Unit" class="form-label fw-bold"></label>
                                <input asp-for="Unit" class="form-control" placeholder="e.g., boxes, kg, liters" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Priority" class="form-label fw-bold"></label>
                                <select asp-for="Priority" class="form-select">
                                    <option>Low</option>
                                    <option selected>Medium</option>
                                    <option>High</option>
                                    <option>Critical</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Provide details about the resources..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DonatedBy" class="form-label fw-bold"></label>
                                <input asp-for="DonatedBy" class="form-control" placeholder="Your name or organization" />
                                <span asp-validation-for="DonatedBy" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DonationDate" class="form-label fw-bold"></label>
                                <input asp-for="DonationDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DonationDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label fw-bold"></label>
                                <input asp-for="Location" class="form-control" placeholder="Where are resources located?" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ExpiryDate" class="form-label fw-bold"></label>
                                <input asp-for="ExpiryDate" class="form-control" type="date" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Additional Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any additional information..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Donate Resources
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

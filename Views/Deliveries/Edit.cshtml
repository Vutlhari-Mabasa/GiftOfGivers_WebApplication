@model GiftOfGivers_WebApplication.Models.Delivery

@{
    ViewData["Title"] = "Edit Delivery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Delivery</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DeliveryID" />

    <div class="mb-2">
        <label asp-for="ReliefProjectID" class="form-label"></label>
        <input asp-for="ReliefProjectID" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="ResourceID" class="form-label"></label>
        <input asp-for="ResourceID" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" />
    </div>
    <div class="mb-2">
        <label asp-for="DeliveredAt" class="form-label"></label>
        <input asp-for="DeliveredAt" class="form-control" type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
   

</form>

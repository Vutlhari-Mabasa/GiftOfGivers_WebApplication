@model IEnumerable<GiftOfGivers_WebApplication.Models.ReliefProject>

@{
    ViewData["Title"] = "Relief Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Relief Projects</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ReliefProjectID</th>
            <th>Name</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReliefProjectID</td>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReliefProjectID" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReliefProjectID" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReliefProjectID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

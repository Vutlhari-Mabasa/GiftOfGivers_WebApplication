@model GiftOfGivers_WebApplication.Models.ReliefProject

@{
    ViewData["Title"] = "Delete Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Relief Project</h1>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>ReliefProject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ReliefProjectID</dt>
        <dd class="col-sm-10">@Model.ReliefProjectID</dd>

        <dt class="col-sm-2">IncidentID</dt>
        <dd class="col-sm-10">@Model.IncidentID</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ReliefProjectID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

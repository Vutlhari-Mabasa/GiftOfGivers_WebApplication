@model IEnumerable<GiftOfGivers_WebApplication.Models.IncidentReport>

@{
    ViewData["Title"] = "Disaster Incident Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-exclamation-triangle"></i> Disaster Incident Reports</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-danger">
                <i class="bi bi-plus-circle"></i> Report New Incident
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Incident</th>
                            <th>Type</th>
                            <th>Location</th>
                            <th>Severity</th>
                            <th>Status</th>
                            <th>Start Date</th>
                            <th>Affected</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Name</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.Type</span>
                                </td>
                                <td>@item.Location</td>
                                <td>
                                    <span class="badge @(item.SeverityLevel == "Critical" ? "bg-danger" : item.SeverityLevel == "High" ? "bg-warning" : item.SeverityLevel == "Medium" ? "bg-info" : "bg-secondary")">
                                        @item.SeverityLevel
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(item.Status == "Active" ? "bg-danger" : item.Status == "Resolved" ? "bg-success" : "bg-secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>@item.StartDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @if (item.EstimatedAffectedPeople.HasValue && item.EstimatedAffectedPeople.Value > 0)
                                    {
                                        <strong>@item.EstimatedAffectedPeople.Value</strong> <small>people</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.IncidentID" class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.IncidentID" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IncidentID" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GiftOfGivers_WebApplication.Models.IncidentReport

@{
    ViewData["Title"] = "Incident Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> @Model.Name</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Model.Type</span>
                                </dd>

                                <dt class="col-sm-4">Location</dt>
                                <dd class="col-sm-8">@Model.Location</dd>

                                <dt class="col-sm-4">Severity</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.SeverityLevel == "Critical" ? "bg-danger" : Model.SeverityLevel == "High" ? "bg-warning" : Model.SeverityLevel == "Medium" ? "bg-info" : "bg-secondary")">
                                        @Model.SeverityLevel
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.Status == "Active" ? "bg-danger" : Model.Status == "Resolved" ? "bg-success" : "bg-secondary")">
                                        @Model.Status
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Start Date</dt>
                                <dd class="col-sm-8">@Model.StartDate.ToString("MMMM dd, yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Created</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <dt class="col-sm-4">Description</dt>
                                    <dd class="col-sm-8">@Model.Description</dd>
                                }

                                @if (Model.EstimatedAffectedPeople.HasValue && Model.EstimatedAffectedPeople.Value > 0)
                                {
                                    <dt class="col-sm-4">Affected People</dt>
                                    <dd class="col-sm-8">
                                        <strong>@Model.EstimatedAffectedPeople.Value</strong> people
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.ReportedBy))
                                {
                                    <dt class="col-sm-4">Reported By</dt>
                                    <dd class="col-sm-8">@Model.ReportedBy</dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.ContactInformation))
                                {
                                    <dt class="col-sm-4">Contact Info</dt>
                                    <dd class="col-sm-8">@Model.ContactInformation</dd>
                                }
                            </dl>
                        </div>
                        @if (Model.ReliefProjects != null && Model.ReliefProjects.Any())
                        {
                            <div class="col-md-6">
                                <h5>Related Relief Projects</h5>
                                <ul class="list-group">
                                    @foreach (var project in Model.ReliefProjects)
                                    {
                                        <li class="list-group-item">
                                            <strong>@project.Name</strong>
                                            <span class="badge bg-info">@project.Status</span>
                                            <br><a href="@Url.Action("Details", "ReliefProjects", new { id = project.ReliefProjectID })" class="btn btn-sm btn-outline-primary mt-2">View Project</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.IncidentID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.IncidentID" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

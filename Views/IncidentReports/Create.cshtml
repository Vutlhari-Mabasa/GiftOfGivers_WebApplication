@model GiftOfGivers_WebApplication.Models.IncidentReport

@{
    ViewData["Title"] = "Report New Incident";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Report Disaster Incident</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Flood in Downtown Area" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Type" class="form-label fw-bold"></label>
                                <select asp-for="Type" class="form-select">
                                    <option value="">Select Type</option>
                                    <option>Flood</option>
                                    <option>Fire</option>
                                    <option>Earthquake</option>
                                    <option>Hurricane</option>
                                    <option>Drought</option>
                                    <option>Disease Outbreak</option>
                                    <option>Other</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label fw-bold"></label>
                                <input asp-for="Location" class="form-control" placeholder="City, State, Address" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <input asp-for="StartDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SeverityLevel" class="form-label fw-bold"></label>
                                <select asp-for="SeverityLevel" class="form-select">
                                    <option>Low</option>
                                    <option selected>Medium</option>
                                    <option>High</option>
                                    <option>Critical</option>
                                </select>
                                <span asp-validation-for="SeverityLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EstimatedAffectedPeople" class="form-label fw-bold"></label>
                                <input asp-for="EstimatedAffectedPeople" class="form-control" type="number" min="0" />
                                <span asp-validation-for="EstimatedAffectedPeople" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Please provide detailed description of the incident..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ReportedBy" class="form-label fw-bold"></label>
                                <input asp-for="ReportedBy" class="form-control" placeholder="Your name or organization" />
                                <span asp-validation-for="ReportedBy" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ContactInformation" class="form-label fw-bold"></label>
                                <input asp-for="ContactInformation" class="form-control" placeholder="Email or phone" />
                                <span asp-validation-for="ContactInformation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-send-fill"></i> Submit Incident Report
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

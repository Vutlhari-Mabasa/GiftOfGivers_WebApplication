@model GiftOfGivers_WebApplication.Models.IncidentReport

@{
    ViewData["Title"] = "Delete Incident";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Incident</h1>

<h3>Are you sure you want to delete this incident?</h3>

<div class="mb-3">
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
    

</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IncidentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

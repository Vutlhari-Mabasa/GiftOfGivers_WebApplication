<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Gift Of Givers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: linear-gradient(135deg, #d4fc79, #96e6a1, #89f7fe, #66a6ff);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            font-family: 'Nunito', sans-serif;
            color: #333;
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #66a6ff, #89f7fe);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

            .navbar .nav-link {
                color: #fff !important;
                font-weight: 600;
            }

                .navbar .nav-link:hover {
                    color: #d4fc79 !important;
                }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(90deg, #96e6a1, #d4fc79);
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #d4fc79, #96e6a1);
            }

        .btn-warning, .btn-info, .btn-danger {
            border: none;
            font-weight: 600;
        }

        /* Tables */
        .table {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

            .table th {
                background: linear-gradient(90deg, #66a6ff, #89f7fe);
                color: #fff;
                font-weight: 700;
                text-align: center;
            }

            .table td {
                vertical-align: middle;
                text-align: center;
            }

            .table tbody tr:hover {
                background-color: #f0fff0;
                transition: background 0.3s ease;
            }

        /* Page content container */
        main {
            flex: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand text-white fw-bold" href="/">Gift Of Givers</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/IncidentReports"><i class="bi bi-exclamation-triangle"></i> Incidents</a></li>
                        <li class="nav-item"><a class="nav-link" href="/ResourceTracking"><i class="bi bi-box"></i> Resources</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Volunteer
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Volunteers/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" href="/Volunteers/Register"><i class="bi bi-person-plus"></i> Register</a></li>
                                <li><a class="dropdown-item" href="/VolunteerTasks"><i class="bi bi-list-task"></i> Tasks</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Management
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Donors"><i class="bi bi-people"></i> Donors</a></li>
                                <li><a class="dropdown-item" href="/ReliefProjects"><i class="bi bi-folder"></i> Relief Projects</a></li>
                                <li><a class="dropdown-item" href="/Donations"><i class="bi bi-cash"></i> Donations</a></li>
                                <li><a class="dropdown-item" href="/Deliveries"><i class="bi bi-truck"></i> Deliveries</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Volunteers"><i class="bi bi-list-ul"></i> All Volunteers</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/swagger" target="_blank"><i class="bi bi-file-text"></i> API</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item" style="cursor: pointer;">
                                        <button type="submit" class="btn btn-link p-0 w-100 text-start text-decoration-none" style="color: #333;">
                                            <i class="bi bi-box-arrow-right"></i> Sign Out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Sign In</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register"><i class="bi bi-person-plus"></i> Sign Up</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mt-5">
                <div class="mb-4">
                    <i class="bi bi-shield-exclamation" style="font-size: 100px; color: #ff6b6b;"></i>
                </div>
                <h1 class="display-4 mb-3" style="color: #66a6ff; font-weight: 700;">Access Denied</h1>
                <p class="lead mb-4">You don't have permission to access this page.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-md-2">
                        <i class="bi bi-house-door"></i> Go to Home
                    </a>
                    <form asp-action="Logout" asp-controller="Account" method="post" class="ms-md-2">
                        <button type="submit" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-box-arrow-right"></i> Sign Out
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


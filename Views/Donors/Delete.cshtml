@model GiftOfGivers_WebApplication.Models.Donor

@{
    ViewData["Title"] = "Delete Donor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Donor</h1>

<h3>Are you sure you want to delete this donor?</h3>
<div>
    <h4>Donor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DonorID</dt>
        <dd class="col-sm-10">@Model.DonorID</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
    

</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DonorID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model IEnumerable<GiftOfGivers_WebApplication.Models.Donor>

@{
    ViewData["Title"] = "Donors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Donors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Donor</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DonorID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DonorID</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DonorID" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DonorID" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DonorID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

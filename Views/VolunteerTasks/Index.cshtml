@model IEnumerable<GiftOfGivers_WebApplication.Models.VolunteerTask>

@{
    ViewData["Title"] = "Volunteer Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-list-task"></i> Volunteer Tasks</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Task
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Title</h5>
                            <span class="badge @(item.Priority == "High" ? "bg-danger" : item.Priority == "Medium" ? "bg-warning" : "bg-info")">
                                @item.Priority
                            </span>
                        </div>
                        <p class="card-text text-muted">@item.Description</p>
                        
                        <div class="mb-2">
                            <span class="badge @(item.Status == "Open" ? "bg-success" : item.Status == "In Progress" ? "bg-warning" : "bg-secondary")">
                                @item.Status
                            </span>
                            @if (item.Location != null)
                            {
                                <span class="text-muted"><i class="bi bi-geo-alt"></i> @item.Location</span>
                            }
                        </div>
                        
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-project-diagram"></i> <strong>Project:</strong> @item.ReliefProject?.Name<br>
                                <i class="bi bi-people"></i> <strong>Volunteers Needed:</strong> @item.VolunteersNeeded
                            </small>
                        </div>
                        
                        @if (item.StartDate.HasValue)
                        {
                            <small class="text-muted">
                                <i class="bi bi-calendar"></i> @item.StartDate.Value.ToString("MMM dd, yyyy")
                            </small>
                        }
                        
                        <div class="mt-3">
                            <a asp-action="Details" asp-route-id="@item.TaskID" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            @if (item.Status == "Open")
                            {
                                <a asp-action="Assign" asp-route-id="@item.TaskID" class="btn btn-sm btn-success">
                                    <i class="bi bi-person-plus"></i> Assign Volunteer
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
            <p class="mt-2">No volunteer tasks available at this time.</p>
            <a asp-action="Create" class="btn btn-primary">Create First Task</a>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


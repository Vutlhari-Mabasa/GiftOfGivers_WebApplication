@model GiftOfGivers_WebApplication.Models.VolunteerTask

@{
    ViewData["Title"] = "Delete Volunteer Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Delete Task</h3>
                </div>
                <div class="card-body p-4">
                    <h4>Are you sure you want to delete this task?</h4>
                    <div class="alert alert-warning">
                        <strong>Note:</strong> This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Status</span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="TaskID" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


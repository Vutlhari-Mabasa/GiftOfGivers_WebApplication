@model GiftOfGivers_WebApplication.Models.VolunteerTask

@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-list-task"></i> Task Details</h3>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-3">Task Title</dt>
                        <dd class="col-sm-9"><h5>@Model.Title</h5></dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Relief Project</dt>
                        <dd class="col-sm-9">@Model.ReliefProject?.Name</dd>

                        <dt class="col-sm-3">Priority</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Priority == "High" ? "bg-danger" : Model.Priority == "Medium" ? "bg-warning" : "bg-info")">
                                @Model.Priority
                            </span>
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Status == "Open" ? "bg-success" : Model.Status == "In Progress" ? "bg-warning" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-3">Location</dt>
                        <dd class="col-sm-9">@Model.Location</dd>

                        <dt class="col-sm-3">Required Skills</dt>
                        <dd class="col-sm-9">@Model.RequiredSkills</dd>

                        <dt class="col-sm-3">Volunteers Needed</dt>
                        <dd class="col-sm-9">@Model.VolunteersNeeded</dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Model.StartDate?.ToString("MMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">@Model.EndDate?.ToString("MMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                        @if (Model.VolunteerAssignments != null && Model.VolunteerAssignments.Any())
                        {
                            <dt class="col-sm-3">Assigned Volunteers</dt>
                            <dd class="col-sm-9">
                                <ul class="list-unstyled">
                                    @foreach (var assignment in Model.VolunteerAssignments)
                                    {
                                        <li>
                                            <i class="bi bi-person-circle"></i> @assignment.Volunteer?.FullName
                                            <span class="badge bg-secondary">@assignment.Status</span>
                                        </li>
                                    }
                                </ul>
                            </dd>
                        }
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.TaskID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Assign" asp-route-id="@Model.TaskID" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Assign Volunteer
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.TaskID" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


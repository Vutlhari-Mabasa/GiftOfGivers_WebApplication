@model GiftOfGivers_WebApplication.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-person-circle"></i> Volunteer Details</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8"><strong>@Model.FullName</strong></dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>

                                <dt class="col-sm-4">Address</dt>
                                <dd class="col-sm-8">@Model.Address</dd>

                                <dt class="col-sm-4">City</dt>
                                <dd class="col-sm-8">@Model.City</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">@Model.Status</span>
                                </dd>

                                <dt class="col-sm-4">Available Days</dt>
                                <dd class="col-sm-8">@Model.AvailableDays</dd>

                                <dt class="col-sm-4">Registered</dt>
                                <dd class="col-sm-8">@Model.RegistrationDate.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5>Skills & Qualifications</h5>
                        <p>@Model.Skills</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-4">
                            <h5>Additional Notes</h5>
                            <p>@Model.Notes</p>
                        </div>
                    }

                    @if (Model.VolunteerAssignments != null && Model.VolunteerAssignments.Any())
                    {
                        <div class="mb-4">
                            <h5>Active Assignments</h5>
                            <div class="list-group">
                                @foreach (var assignment in Model.VolunteerAssignments)
                                {
                                    <div class="list-group-item">
                                        <strong>@assignment.VolunteerTask?.Title</strong>
                                        <span class="badge bg-info">@assignment.Status</span>
                                        <br><small class="text-muted">@assignment.VolunteerTask?.Description</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.VolunteerID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        @if (Model.VolunteerAssignments == null || !Model.VolunteerAssignments.Any())
                        {
                            <a asp-action="Delete" asp-route-id="@Model.VolunteerID" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

